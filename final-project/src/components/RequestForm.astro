<style>
  .requestForm {
    font-family: "Roboto", sans-serif;
    height: auto;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f5f5f5;
  }

  .container {
    display: flex;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
  }

  .column {
    width: 50%;
    padding: 20px;
  }

  .column img {
    width: 100%;
  }

  .contact-header {
    font-size: 14px;
    color: black;
    font-weight:bold;
  }

  .request-header {
    font-size: 36px;
    font-weight: bold;
    margin: 10px 0;
  }

  .description {
    font-size: 14px;
    color: black;
    margin-bottom: 20px;
  }

  .form-group {
  display: flex;
  gap: 20px; 
  margin-bottom: 20px;
}

.form-group div {
  display: flex;
  flex-direction: column;
  width: 100%; 
  gap: 10px; 
}

  .form-group input,
  .form-group select {
    width: 90%;
    padding: 10px;
    font-size: 16px;
    border: 1px solid black;
    border-radius: 5px;
  }

  .form-group select {
      width: 98%;
  }

  .message-box {
      margin-top: 20px;
    width: 95%;
    padding: 10px;
    height: 130px;
    font-size: 14px;
    border: 1px solid black;
    border-radius: 5px;
    margin-bottom: 20px;
  }

  .terms {
    font-size: 12px;
    margin-bottom: 20px;
  }

  .terms a {
    text-decoration: underline;
    color: #000;
  }

  .submit-btn {
    background-color: #000;
    color: #fff;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    font-size: 16px;
    border-radius: 5px;
  }

  .submit-btn:hover {
    background-color: #444;
  }

  .terms-check {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
  }

  .terms-check input {
    margin-right: 10px;
  }

  span{
      font-size: 14px;
  }

  .terms{
      text-decoration: underline;
      font-size: 16px;
  }

@media (max-width: 768px) {
.container {
  flex-direction: column; 
}

.column {
  width: 100%; 
  padding: 10px;
}

.column img {
  display: none; 
}

.form-group {
  flex-direction: column; 
  gap: 10px;
}

.form-group input{
  width: 90%; 
}

.form-group select {
  width: 95%; 
}

.message-box {
  width: 90%;
}
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  
  emailjs.init({
    publicKey: "d6yRYWD_ovndPFsZp"  
  });
  document.querySelector('.submit-btn').addEventListener('click', function(event) {
    event.preventDefault(); 
    
    const fullName = document.querySelector('input[type="text"]').value;
    const phoneNumber = document.querySelector('input[type="tel"]').value;
    const service = document.querySelector('.services-selector').value;
    const time = document.querySelector('.time-selector').value;
    const message = document.querySelector('.message-box').value;

    if (!fullName || !phoneNumber || !service || !time || !message) {
      alert('Please fill in all fields.');
      return;
    }
    
    if (!document.querySelector('#terms').checked) {
      alert('Please accept the terms and conditions.');
      return;
    }
    
    emailjs.send('service_xcqy23m', 'template_bhx1hf7', {
      full_name: fullName,
      phone_number: phoneNumber,
      service: service,
      time: time,
      message: message
    }).then(function(response) {
      console.log('Success:', response);
      alert('Your message has been sent successfully!');
    }, function(error) {
      console.error('Error:', error);
      alert('Failed to send your message. Please try again.');
    });
  });
});
</script>