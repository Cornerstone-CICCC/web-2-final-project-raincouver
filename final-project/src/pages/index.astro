<style>
  /* main visaul */
  .main-visual-wrapper {
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-left: 8px;
    padding-right: 8px;
  }

  .main-visual-text {
    width: 100%;
    padding-top: 18px;
    padding-bottom: 18px;
  }

  .main-visual-text h3 {
    font-size: 40px;
    font-weight: 700;
    line-height: 48px;
    margin-top: 0;
    margin-bottom: 20px;
  }

  .main-visual-text p {
    font-size: 18px;
    line-height: 27px;
    margin-bottom: 24px;
  }

  .main-visual-link a {
    display: inline-block;
    font-size: 16px;
    text-decoration: none;
    padding: 12px 24px;
    gap: 8px;
  }

  .main-visual-link-quote {
    background-color: #000;
    color: #fff;
    border-radius: 5px;
  }

  .main-visual-link-learn {
    color: #000;
    border: 1px solid #000;
    border-radius: 5px;
  }

  .main-visual-img {
    display: block;
    width: 100%;
  }

  .main-visual-img img {
    width: 100%;
    height: auto;
  }

  /* our team */
  .our-team-wrapper {
    max-width: 1280px;
    margin: 0 auto;
    text-align: center;
  }

  .our-team-wrapper h2 {
    font-size: 48px;
    font-weight: 700;
  }

  .our-team-text {
    font-size: 18px;
  }

  .our-team-content-wrapper {
    display: flex;
    flex-direction: column;
  }

  .our-team-content {
    margin-top: 32px;
  }

  .our-team-content-img img {
    width: 100%;
  }

  .our-team-content-text .name {
    font-size: 20px;
    font-weight: 600;
    margin-top: 20px;
  }

  .text-content {
    width: 85%;
    margin: 0 auto 20px;
    font-size: 16px;
    line-height: 24px;
  }

  /* subscribe */
  .subscribe-wrapper {
    max-width: 1280px;
    margin: 0 auto;
    text-align: center;
    padding-top: 112px;
    padding-bottom: 112px;
  }

  .subscribe-wrapper h2 {
    font-size: 48px;
    font-weight: 700;
    margin-top: 0;
    margin-bottom: 24px;
  }

  .subscribe-text {
    font-size: 18px;
    line-height: 27px;
    max-width: 768px;
    margin: 0 auto 24px;
  }

  #subscribe-form {
    width: 100%;
    max-width: 480px;
    margin: 0 auto;
  }

  #subscribe-form input {
    width: 60%;
    padding: 12px 4px;
  }

  #subscribe-form button {
    margin-left: 8px;
    padding: 12px 24px;
    color: #fff;
    background-color: #000;
    border-radius: 5px;
  }

  #subscribe-form button:hover {
    cursor: pointer;
  }

  .subscribe-text-end {
    font-size: 12px;
    line-height: 18px;
    margin-bottom: 0;
  }

  @media screen and (min-width: 640px) {
    /* main visual */
    .main-visual-container{
    position: relative; 
    }

    .main-visual-wrapper {
      flex-direction: row;
      height: auto;
    }

    .main-visual-text{
      display: flex;
      justify-content: end;
      width: 50%;
      height: auto;
    }

    .main-visual-text-inner {
      height: auto;
      max-width: 640px;
    }

    .main-visual-img{
      width: 50vw;
      height: auto;
    }
  }

  @media screen and (min-width: 768px) {
    /* our team */
    .our-team-content-wrapper {
      flex-direction: row;
      flex-wrap: wrap;
    }

    .our-team-content {
      width: 50%;
      display: flex;
      flex-direction: row;
      align-items: center;
      margin-top: 48px;
    }

    .our-team-content-img {
      width: 44%;
    }

    .our-team-content-text {
      width: 56%;
      text-align: left;
      padding-left: 1.5rem;
    }

    .text-content {
      margin-left: 0;
      margin-right: auto;
    }

    /* subscribe */
    #subscribe-form input {
      width: 70%;
    }
  }
</style>
<script>
document.addEventListener('DOMContentLoaded', function() {
  emailjs.init("d6yRYWD_ovndPFsZp");

  document.getElementById('subscribe-form').addEventListener('submit', function(event) {
      event.preventDefault(); 

      var email = document.getElementById('email').value;

      emailjs.send('service_xcqy23m', 'template_tt8uadc', {
          to_email: email 
      })
      .then(function(response) {
          console.log('Success:', response);
          alert('Thank you for subscribing!'); 
      }, function(error) {
          console.log('Error:', error);
          alert('Something went wrong. Please try again.'); 
      });
  });
});
</script>